<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Main Content of the Activity -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="16dp">

        <!-- ScrollView to enable scrolling inside CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_on_dashboard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="38dp"
            android:layout_margin="5dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/light_white"
                    android:padding="0dp">

                    <!-- Spacer View -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="95dp"
                        android:src="@drawable/wave_on_home_screen"
                        android:contentDescription="@string/wave_on_home_screen_image_description" />

                    <!-- App Name -->
                    <TextView
                        android:id="@+id/app_name_on_main_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/green"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        tools:ignore="TextSizeCheck,TextContrastCheck" />

                    <!-- Spacer View -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />

                    <!-- Username Section -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="60dp"
                        android:layout_margin="16dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/green">

                        <TextView
                            android:id="@+id/usernameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:text="@string/user_name_on_home_screen"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                    </androidx.cardview.widget.CardView>

                    <!-- Spacer View -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <!-- Subtitle Text -->
                    <TextView
                        android:id="@+id/subtitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/line_below_user_name_on_home_screen"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <!-- Article Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/articleTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pros_and_cons_of_fast_food"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/readNowButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/read_now_button_text_on_dashboard"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="@color/green" />
                    </LinearLayout>

                    <!-- Track Progress Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/light_white"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/trackProgressText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="Track Your Weekly Progress"
                            android:textSize="16sp"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/viewNowButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="View Now"
                            android:backgroundTint="@color/green" />
                    </LinearLayout>

                    <!-- Favorites Section -->
                    <TextView
                        android:id="@+id/chooseFavoritesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nutrition Sources"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <!-- Favorites Grid -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="1"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:id="@+id/tap_on_fruits"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            android:padding="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/fruit_salad" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fruits"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tap_on_vegetables"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            android:padding="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/vegetables" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vegetables"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tap_on_supplements"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            android:padding="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/supplement" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Supplements"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </GridLayout>

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        android:background="@color/white">

        <!-- Optional header layout -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Header"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
