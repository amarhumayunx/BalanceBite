<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- ScrollView to enable scrolling -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- CardView inside ScrollView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_on_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="38dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_white"
                android:padding="16dp">

                <!-- Spacer View -->
                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="90dp"
                    android:src="@drawable/wave_on_home_screen"
                    android:contentDescription="Image"
                    >

                </ImageView>

                <!-- App Name -->
                <TextView
                    android:id="@+id/app_name_on_main_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/green"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="TextSizeCheck,TextContrastCheck" />

                <!-- Spacer View -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="60dp"
                    app:cardBackgroundColor="@color/green">

                    <TextView
                        android:id="@+id/usernameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:text="Welcome, User"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                </androidx.cardview.widget.CardView>

                <!-- Spacer View -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <!-- Subtitle Text -->
                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find, track and eat healthy food."
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp" />

                <!-- Article Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/articleTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The pros and cons of fast food."
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/readNowButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read Now"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/green" />
                </LinearLayout>

                <!-- Track Progress Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/light_white"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/trackProgressText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Track Your Weekly Progress"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/viewNowButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Now"
                        android:backgroundTint="@color/green" />
                </LinearLayout>

                <!-- Choose Your Favorites Section -->
                <TextView
                    android:id="@+id/chooseFavoritesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Your Favorites"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!-- Favorites Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="1"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:id="@+id/tap_on_fruits"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/fruit_salad" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fruits"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tap_on_vegetables"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/vegetables" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vegetables"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tap_on_supplements"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/supplement" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Supplements"
                            android:textSize="14sp" />
                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>
    <!-- Updated BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/nav_round_corner"
        android:elevation="8dp"
        app:menu="@menu/nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
