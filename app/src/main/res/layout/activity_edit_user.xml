<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Wave Image -->
    <ImageView
        android:id="@+id/wave_one"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:contentDescription="@string/wave_one"
        android:src="@drawable/wave_for_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        android:padding="0dp"
        tools:ignore="ImageContrastCheck" />

    <!-- CardView for Profile and Buttons -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/wave_one"
        app:layout_constraintBottom_toTopOf="@id/wave_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="15dp">

            <!-- Name Input -->
            <TextView
                android:id="@+id/NameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_label_on_edit_user_activity"
                android:padding="5dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/name_of_user"
                android:drawableTint="@color/gray"
                android:background="@drawable/custom_edittext_round"
                android:hint="@string/enter_name_on_edit_user_activity"
                android:padding="10dp"
                android:textAlignment="center"
                tools:ignore="Autofill,TextContrastCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />

            <!-- Age Input -->
            <TextView
                android:id="@+id/AgeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age_label_on_edit_user_activity"
                android:padding="5dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/editAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/age_icon"
                android:drawableTint="@color/gray"
                android:background="@drawable/custom_edittext_round"
                android:hint="@string/enter_age_on_edit_user_activity"
                android:padding="10dp"
                android:inputType="number"
                android:textAlignment="center"
                tools:ignore="Autofill,TouchTargetSizeCheck,VisualLintTextFieldSize" />

            <!-- Height Input -->
            <TextView
                android:id="@+id/HeightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/height_label_on_edit_user_activity"
                android:padding="5dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/editHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/height_icon"
                android:background="@drawable/custom_edittext_round"
                android:padding="10dp"
                android:drawableTint="@color/gray"
                android:hint="@string/enter_height_on_edit_user_activity"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                tools:ignore="Autofill,TextContrastCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

            <!-- Weight Input -->
            <TextView
                android:id="@+id/WeightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight_label_on_edit_user_activity"
                android:padding="5dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/editWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/weight_icon"
                android:drawableTint="@color/gray"
                android:background="@drawable/custom_edittext_round"
                android:padding="10dp"
                android:hint="@string/enter_weight_on_edit_user_activity"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                tools:ignore="Autofill,TextContrastCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

            <!-- Health Info Input -->
            <TextView
                android:id="@+id/HealthInfoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/health_info_label_on_edit_user_activity"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/editHealthInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/health_icon"
                android:background="@drawable/custom_edittext_round"
                android:padding="10dp"
                android:drawableTint="@color/gray"
                android:hint="@string/enter_health_info_on_edit_user_activity"
                android:textAlignment="center"
                tools:ignore="Autofill,TextContrastCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />

            <!-- Save Button -->
            <Button
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/green"
                android:text="@string/save_button_on_edit_user_activity"
                android:textSize="18sp"
                android:padding="10dp"
                tools:ignore="TextContrastCheck,VisualLintButtonSize" />

            <!-- Delete Button -->
            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/green"
                android:text="@string/delete_button_on_edit_user_activity"
                android:textColor="@android:color/white"
                android:padding="10dp"
                android:textSize="18sp"
                tools:ignore="TextContrastCheck,VisualLintButtonSize" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Wave Image -->
    <ImageView
        android:id="@+id/wave_two"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:contentDescription="@string/wave_two"
        android:src="@drawable/wave"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/transparent"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
