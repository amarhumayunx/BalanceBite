<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".ProfileShownActivity">

    <!-- CardView to show user information -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="36dp"
        app:cardElevation="8dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <!-- LinearLayout inside CardView for user details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:src="@drawable/wave_on_home_screen"
                android:contentDescription="@string/wave_on_home_screen_image_description" />


            <!-- Username -->
            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username, "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Age -->
            <TextView
                android:id="@+id/ageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: "
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"/>

            <!-- Height -->
            <TextView
                android:id="@+id/heightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height: "
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- Weight -->
            <TextView
                android:id="@+id/weightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight: "
                android:layout_margin="10dp"
                android:textSize="16sp"/>

            <!-- Health Information -->
            <TextView
                android:id="@+id/healthInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Information: "
                android:layout_margin="10dp"
                android:textSize="16sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
